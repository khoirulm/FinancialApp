<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinancialApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="background">@drawable/shape_rectangle_red</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Second">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="color">@color/red</item>
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">

    </style>

    <style name="TextView.High">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="TextView.High.Whita">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Normal">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="TextView.Normal.White">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>